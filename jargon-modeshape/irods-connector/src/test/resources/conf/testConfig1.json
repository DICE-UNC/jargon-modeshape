 {
    "name" : "irods",
    "transactionMode" : "auto",
    "monitoring" : {
        "enabled" : true,
    },
     "workspaces" : {
        "predefined" : ["otherWorkspace"],
        "default" : "default",
        "allowCreation" : true,
    },
    "storage" : {
        "cacheName" : "irods",
        "cacheConfiguration" : "conf/infinispan.xml",        
        "binaryStorage" : {
            "type" : "file",
            "directory" : "irods/binaries",
            "minimumBinarySizeInBytes" : 0
        }
    },
    "security" : {
        "anonymous" : {
            "roles" : ["readonly","readwrite","admin"],
            "useOnFailedLogin" : true
        }
    },
     "providers" : [
        {
            "name" : "irods",
            "classname" : "org.irods.jargon.modeshape.connector.IrodsAuthenticationProvider"
        }
    ]
    },
   
     "externalSources" : {
        "irods-modeshape" : {
            "classname" : "org.irods.jargon.modeshape.connector.IrodsWriteableConnector",
            "directoryPath" : "/fedZone1/home/test1/jargon-scratch/ModeshapeConnectorRoot/ModeshapeConnectorRoot", 
            "projections" : [
                "default:/irodsGrid => /"
            ],
             "queryable" : false,
            "readOnly" : false,
            "addMimeTypeMixin" : false,
            "addAvus" : false,
             "cacheTtlSeconds" : 640,
            "exclusionPattern" : ".+[.]tmp$"
        }
    },
    
     "node-types" : ["conf/irods.cnd"]
}


