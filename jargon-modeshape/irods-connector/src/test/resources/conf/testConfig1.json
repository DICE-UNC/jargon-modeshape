{
    "name" : "Persisted-Repository",
    "workspaces" : {
        "predefined" : ["otherWorkspace"],
        "default" : "default",
        "allowCreation" : true
    },
    "security" : {
        "anonymous" : {
            "roles" : ["readonly","readwrite","admin"],
            "useOnFailedLogin" : false
        }
    },
    "storage" : {
        "cacheConfiguration" : "infinispan-configuration.xml",
        "cacheName" : "persisted-repository",
        "binaryStorage" : {
            "type" : "file",
            "directory": "/",
            "minimumBinarySizeInBytes" : 999
        }
    },
    "externalSources" : {
        "irods" : {
            "classname" : "org.irods.jargon.modeshape.connector.IRODSWriteableConnector",
            "directoryPath" : "/test1/home/test1",
            "projections" : [ "/files" ],
            "readOnly" : false,
            "addMimeTypeMixin" : false,
            "exclusionPattern" : ".+[.]tmp$"
        }
    }

}